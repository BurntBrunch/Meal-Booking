<?xml version="1.0" encoding="utf-8"?>
<manifest package="name.kratunov.mealbooking"
      android:versionCode="1"
      android:versionName="1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <application android:label="@string/app_name" android:icon="@drawable/logo_small" android:theme="@android:style/Theme.NoTitleBar" android:name=".Application">
        <activity android:name=".Login"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

   <activity android:label="@string/app_name" android:name=".ViewMeals"></activity>
<activity android:name=".BookMeal" android:label="@string/app_name">
    <intent-filter>
        <category android:name="android.intent.category.DEFAULT"></category>
        <action android:name="name.kratunov.mealbooking.BOOK_MEAL"></action>
        <data android:mimeType="vnd.android.cursor.item/vnd.mealbooking.meal"></data>
    </intent-filter>
</activity>
<provider android:name=".MealsContentProvider" android:authorities="name.kratunov.mealbooking.mealsprovider"></provider>
</application>




<uses-permission android:name="android.permission.INTERNET"></uses-permission>

<uses-sdk android:minSdkVersion="4"></uses-sdk>
</manifest> 